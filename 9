class Solution {
    public boolean isPalindrome(int x) {
        if(x<0){
            return false;
        }
        int number=0;
        int temp =x;
        while(temp!=0){
            int digit=(int) (temp % 10);
            number= number* 10 + digit;
            temp= temp/10;
        }
       return (number==x); 
    }
}
